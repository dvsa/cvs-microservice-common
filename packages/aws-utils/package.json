{
  "name": "@dvsa/aws-utilities",
  "version": "0.1.0",
  "description": "Helper library for simplifying and standardising usage of AWS clients",
  "author": "DVSA",
  "license": "ISC",
  "files": [
    "classes/**",
    "functions/**",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf coverage dist && npm run clean:temp",
    "clean:temp": "rimraf api classes response",
    "format": "prettier . --write",
    "gitSecrets": "git secrets --scan && git log -p | scanrepo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd && npm run clean:temp"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.606.0",
    "@aws-sdk/client-dynamodb": "^3.606.0",
    "@aws-sdk/client-s3": "^3.608.0",
    "@aws-sdk/client-secrets-manager": "^3.606.0",
    "@aws-sdk/client-ses": "^3.606.0",
    "@aws-sdk/credential-providers": "^3.606.0",
    "@aws-sdk/lib-dynamodb": "^3.606.0",
    "@aws-sdk/util-dynamodb": "^3.596.0",
    "aws-xray-sdk": "^3.9.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.138",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "aws-sdk-client-mock": "^4.0.1",
    "aws-sdk-client-mock-jest": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
