{
  "name": "@dvsa/cvs-microservice-common",
  "version": "1.1.0",
  "description": "Common package to be used in CVS microservices",
  "author": "DVSA",
  "license": "ISC",
  "files": [
    "api/**",
    "classes/**",
    "response/**",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf coverage dist && npm run clean:temp",
    "clean:temp": "rimraf api classes response",
    "format": "prettier . --write",
    "gitSecrets": "git secrets --scan && git log -p | scanrepo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd && npm run clean:temp"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "dayjs": "^1.11.11"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.140",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
